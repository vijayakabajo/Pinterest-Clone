<% include ./partials/header.ejs %>       <!-- Header -->


<div class="w-full h-screen bg-red-500 flex items-center justify-center">
    <div class="w-[90vh] bg-white px-20 py-10 rounded-[30px]">     <!-- background image -->

      <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-none">Create New Account</h1>

      <form action="/register" method="post">

        <input class="block mt-4 w-full px-3 py-2 rounded-[15px]" type="text" name="fullname" placeholder="Full Name">
        <input class="block mt-4 w-full px-3 py-2 rounded-[15px]" type="text" name="username" placeholder="Username">
        <input class="block mt-4 w-full px-3 py-2 rounded-[15px]" type="email" name="useremail" placeholder="Email">
        <input class="block mt-4 w-full px-3 py-2 rounded-[15px]" type="tel" pattern="[0-9]{10}" name="contact" placeholder="Contact">
        <input class="block mt-4 w-full px-3 py-2 rounded-[15px]" type="password" name="password" placeholder="Password">
        <input class=" block mt-8 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">

        <p class="text-xs font-semibold text-zinc-500 mt-7 w-3/4 mx-auto text-center">
          By continuing, you agree to Pinterest's Terms of Service. Opens a new tab and acknowledge you've read our Privacy Policy.
          Opens a new tab. Notice at collection.
        </p>
        
      </form>

      <a class="inline-block mt-7 text-sm font-semibold text text-zinc-700 text-center w-full" href="/">Already have an account?</a>

    </div>
  </div>


<% include ./partials/footer.ejs %>         <!-- Footer -->