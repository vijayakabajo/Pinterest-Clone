<% include ./partials/header.ejs %>       <!-- Header -->


<div class="w-full min-h-screen bg-zinc-700 px-10 py-5 text-white">
    <h1 class="text-xl">Create New Post</h1>
    <hr class="opacity-20 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="text-black block w-1/3 px-3 py-2 border-2 mt-3 rounded-md" type="file" name="postimage">
        <input class="text-black block w-1/3 px-3 py-2 border-2 mt-3 rounded-md" type="text" placeholder="Title" name="title">
        <textarea class="text-black block w-1/3 h-30 px-3 py-2 border-2 mt-3 rounded-md" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2 mt-3 rounded-md bg-red-700" type="submit" value="Create Post">
    </form>
    
</div>


<% include ./partials/footer.ejs %>         <!-- Footer -->